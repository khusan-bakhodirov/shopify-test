{% assign query = request.query_params.q %}
{% if query %}
  <h1>Search Results for "{{ query }}"</h1>
  {% assign results = search.results %}
  {% if results.size > 0 %}
    <ul>
      {% for item in results %}
        <li>{{ item.title }} - {{ item.price }}</li>
      {% endfor %}
    </ul>
  {% else %}
    <p>No results found.</p>
  {% endif %}
{% endif %}